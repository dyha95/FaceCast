extends layout

block content
    div(class="wrapper style2")
        div.title Modifier une offre
        div(id="main", class="container")
            div#content
                article(class="box post")
                    form(action='../updateOffre/'+offreById._id+'/update', method="post")
                        div.field
                            label Nom
                            input(type='text', name="nomOffre", value=offreById.nom)
                        div.field
                            label Type
                            select(name="type")
                                option(value="Spectacle") Spectacle
                                option(value="Film") Film
                        div.field
                            label Date
                            input(type='text', name="date", value=offreById.date)
                        div.field
                            label Nombre de jours
                            input(type='text', name="nbJour", value=offreById.nbJours)
                        div.field
                            label Nombre de figurants
                            input(type='text', name="nbFigurants", value=offreById.nbFigurants)
                        div.field
                            label RÃ´le
                            input(type='text', name="role", value=offreById.roleDemande)
                        br
                        input(type='submit' class="button style1")
